generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Vehicle {
  id String @id @default(uuid())

  name String
  brand String
  year Int
  description String
  status VehicleStatus
  images String[]
  isFeatured Boolean @default(false)

  createdAt DateTime @default(now())
}

model Banner {
  id String @id @default(uuid())
  title String
  imageString String  

  createdAt DateTime @default(now()) 
}

model Spare {
  id String @id @default(uuid())

  name String
  category String
  description String
  status SpareStatus
  images String[]
  isFeatured Boolean @default(false)

  createdAt DateTime @default(now())
}


enum VehicleStatus{
  draft
  published
  archived
}


enum SpareStatus{
  draft
  published
  archived
}
